<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_all_twenty"
    android:background="@color/view_background_lite">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardBackgroundColor="@color/view_background_dialog">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_all_thirtty_five">

            <TextView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:text="@string/text_view_auth_title"/>

            <Spinner
                android:id="@+id/spinner.languege"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:entries="@array/spinner_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view.text.login"
                android:layout_below="@+id/spinner.languege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top_ten"
                android:text="@string/text_view_auth_login"/>

            <EditText
                android:id="@+id/edit.login"
                android:layout_below="@+id/view.text.login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"  />

            <TextView
                android:id="@+id/view.text.password"
                android:layout_below="@+id/edit.login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_auth_password"/>

            <EditText
                android:id="@+id/edit.password"
                android:layout_below="@+id/view.text.password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/view.text.server"
                android:layout_below="@+id/edit.password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_auth_server"/>

            <EditText
                android:id="@+id/edit.server"
                android:layout_below="@+id/view.text.server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"  />

            <TextView
                android:id="@+id/view.text.realm"
                android:layout_below="@+id/edit.server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_auth_realm"/>

            <EditText
                android:id="@+id/edit.realm"
                android:layout_below="@+id/view.text.realm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"  />

            <Button
                android:id="@+id/button.enter"
                android:layout_below="@+id/edit.realm"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top_twenty"
                android:background="@drawable/btn_auth_style"
                android:text="@string/button_enter_text"/>

            <TextView
                android:id="@+id/view.text.repair"
                android:layout_below="@+id/edit.realm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top_trirty"
                android:text="@string/text_view_auth_repair"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>