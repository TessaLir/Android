<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main.tv.cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/main.tv.description"
        android:layout_below="@id/main.tv.description"
        android:text="999$" />

    <TextView
        android:id="@+id/main.tv.description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/main.iv.image"
        android:layout_below="@id/main.tv.title"
        android:text="Popular cat in the world." />

    <TextView
        android:id="@+id/main.tv.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/main.tv.description"
        android:text="TheCat" />

    <ImageView
        android:id="@+id/main.iv.image"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cat_02" />

    </RelativeLayout>

</RelativeLayout>